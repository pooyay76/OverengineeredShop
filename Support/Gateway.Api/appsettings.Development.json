{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtOptions": {
    "ClockSkew": 5,
    "Issuer": "ShopAuthApi",
    "Audience": "ShopGatewayApi"
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/catalog/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/catalog" } ]

      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]

      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7037/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://auth-api:8080/"
          }
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://0.0.0.0:8080" },
      "Https": {
        "Url": "https://0.0.0.0:443",
        "Certificate": {
          "Path": "/https/devcert.pfx",
          "Password": "admin"
        }
      }
    }
  }
}
